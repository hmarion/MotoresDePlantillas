<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <div class="productos">
        <%if(productos.length>0){%>
            <% productos.forEach(function(prod){ %>
                <div>
                    <p><%= prod.title %></p>
                    <p><%= prod.price %></p>
                    <img width=100 height=100 src=<%= prod.thumbnail %>>
                </div>
            <%})%>
        <% } else {%>    
            <h2>No hay productos</h2>
        <%}%>
        <br>
        <a href="/" type="button">Cargar un nuevo producto</a>
    </div>
</body>
</html>