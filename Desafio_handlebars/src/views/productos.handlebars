<div class="productos">
    {{#if list}}
        {{#each list}}
        <div>
            <p>{{this.title}}</p>
            <p>{{this.price}}</p>
            <img width=100 height=100 src={{this.thumbnail}}>
        </div>
        {{/each}}
    {{else}}
        <h2>No hay productos</h2>
    {{/if}}
    <br>
    <a href="/" type="button">Cargar un nuevo producto</a>
</div>